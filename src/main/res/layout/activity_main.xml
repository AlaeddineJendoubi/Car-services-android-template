<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgfinal"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/welcomTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"
            android:layout_marginBottom="10dp"
            android:text="veuillez selectionner "
            android:textSize="40dp"
            android:textColor="#FFFF"
            android:textAppearance="@style/TextAppearance.AppCompat" />
        <TextView
            android:id="@+id/welcomTvII"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="350dp"
            android:layout_marginBottom="10dp"
            android:text="votre role"
            android:textSize="40dp"
            android:textColor="#FFFF"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <Button
            android:id="@+id/clientBtn"

            android:text="Client"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:layout_marginTop="500dp"


            />

        <Button
            android:id="@+id/concessionnaireBtn"
            android:text="concessionnaire"
            android:layout_below="@+id/clientBtn"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:layout_marginTop="30dp"

            />

        <Button
            android:id="@+id/ouvrierBtn"
            android:layout_below="@+id/concessionnaireBtn"
            android:text="ouvrier"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:layout_marginTop="30dp"

            />

    </RelativeLayout>



    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</RelativeLayout>