<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall"
    tools:context=".Roles.Client.Home.Payment.ClientPaymentEspeceChekOut">





    <TextView
        android:id="@+id/chekout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"

        android:text="Check-out"
        android:textSize="40dp"
        android:textColor="#f9ca12"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:id="@+id/payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/chekout"
        android:text="Montant à payer :"
        android:textSize="25dp"
        android:textColor="#FFFF"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <TextView
        android:id="@+id/montant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/chekout"
        android:layout_toRightOf="@+id/payment"
        android:text=" 250 Dt"
        android:textSize="25dp"
        android:textColor="#FFFF"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <CheckBox android:id="@+id/checkbox_meat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="accepter le paiement et accord légal"
        android:textColor="#FFF"
        android:layout_below="@+id/montant"
        android:layout_centerHorizontal="true"
        android:shadowColor="@color/colorPrimary"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/localisation"
        android:text="Map"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:layout_centerInParent="true"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:layout_below="@+id/checkbox_meat"
        android:layout_marginTop="100dp"
        />

</RelativeLayout>